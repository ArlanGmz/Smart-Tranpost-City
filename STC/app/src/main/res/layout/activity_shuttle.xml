<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#078207"
        android:id="@+id/reLayouttop">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/LocationName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/backbton"
            android:text="DLSU STC"
            android:textColor="#000"
            android:textSize="32dp"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/backbton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_back"/>


    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/shuttle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reLayouttop"
        android:fitsSystemWindows="true">


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/sht1"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="400dp"
            android:layout_marginRight="150dp"
            android:text="ETA: "
            android:textColor="#000"
            android:textSize="25dp"
            android:textAlignment="center"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/shtd1"
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="500dp"
            android:layout_marginRight="150dp"
            android:text="ETD: "
            android:textColor="#000"
            android:textSize="25dp"
            android:textAlignment="center"/>

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/goin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="130dp"
            android:layout_marginBottom="290dp"
            android:layout_marginRight="280dp"
            android:text="->"
            android:textColor="#000"
            android:textSize="25dp"
            android:textAlignment="center" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/dest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/goin"
            android:layout_alignBottom="@+id/goin"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:layout_toLeftOf="@+id/Dep"
            android:layout_toStartOf="@+id/Dep"
            android:text="Laguna central"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="25dp" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/Arr"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sht1"

            android:layout_marginTop="20dp"
            android:layout_marginBottom="420dp"
            android:text="9:15"
            android:textColor="#000"
            android:textSize="25dp"
            android:textAlignment="center" />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/Dep"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shtd1"
            android:text="9:30"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="350dp"
            android:textColor="#000"
            android:textSize="25dp"
            android:textAlignment="center" />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="250dp"
            android:layout_marginRight="65dp"
            android:text="Current Queue Count:      /18"
            android:textColor="#000"
            android:textSize="20dp"
            android:textAlignment="center"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/queue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="180dp"
            android:layout_marginBottom="250dp"
            android:layout_marginRight="100dp"
            android:text="10"
            android:textColor="#000"
            android:textSize="20dp"
            android:textAlignment="center"/>
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="210dp"
            android:layout_marginBottom="220dp"
            android:layout_marginRight="85dp"
            android:text="Current waiting Count:     "
            android:textColor="#000"
            android:textSize="20dp"
            android:textAlignment="center"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/waiting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="210dp"
            android:layout_marginBottom="220dp"
            android:layout_marginRight="80dp"
            android:text="10"
            android:textColor="#000"
            android:textSize="20dp"
            android:textAlignment="center"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="250dp"
            android:layout_marginBottom="185dp"
            android:layout_marginRight="60dp"
            android:text=""
            android:textColor="#000"
            android:textSize="25dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/quebut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="290dp"
            android:layout_marginBottom="130dp"
            android:layout_marginRight="100dp"
            android:text="Queue"
            android:textColor="#000"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="350dp"
            android:layout_marginBottom="70dp"
            android:layout_marginRight="100dp"
            android:text="Track"
            android:textColor="#000"
            android:textSize="20dp"/>



    </RelativeLayout>

</RelativeLayout>